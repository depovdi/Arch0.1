                                @Html.ValidationMessageFor(model => model.RapporteringsFormulier.ContainerNummer)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.RapporteringsFormulier.TruckNummer, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.RapporteringsFormulier.TruckNummer, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RapporteringsFormulier.TruckNummer)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.RapporteringsFormulier.Afdeling, new { @class = "control-label col-md-3" })
