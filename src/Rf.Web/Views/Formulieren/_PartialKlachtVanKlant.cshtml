                                @Html.ValidationMessageFor(model => model.SelectedKlantenIds)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.RapporteringsFormulier.Batch, new { @class = "control-label col-md-3" })
