                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.RapporteringsFormulier.Referentie, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.RapporteringsFormulier.Referentie, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RapporteringsFormulier.Referentie)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.RapporteringsFormulier.KlachtGeuitDoor, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.RapporteringsFormulier.KlachtGeuitDoor, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RapporteringsFormulier.KlachtGeuitDoor)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.RapporteringsFormulier.DossierTypeEnum, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.RapporteringsFormulier.DossierTypeEnum, EnumDossierTypeModel.Import)
                                    @EnumDossierTypeModel.Import.GetDisplayName()
                                </label>
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.RapporteringsFormulier.DossierTypeEnum, EnumDossierTypeModel.Export)
                                    @EnumDossierTypeModel.Export.GetDisplayName()
                                </label>
                                <label class="radio-inline">
                                    @Html.RadioButtonFor(model => model.RapporteringsFormulier.DossierTypeEnum, EnumDossierTypeModel.Andere)
                                    @EnumDossierTypeModel.Andere.GetDisplayName()
                                </label>
                                @Html.ValidationMessageFor(model => model.RapporteringsFormulier.DossierTypeEnum)
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.RapporteringsFormulier.VaststellingsDatum, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.EditorFor(model => model.RapporteringsFormulier.VaststellingsDatum, new { htmlAttributes = new { @class = "date-picker form-control" } })
