                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.RapporteringsFormulier.Unit, new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(model => model.SelectedUnitId, new SelectList(Model.ReferenceData.Units, "Id", "Naam", Model.RapporteringsFormulier.Unit.Id), Default_SelectList_Value, new { @class = "form-control" })
